        "200": {
          "description": "SUCCESS- category deleted"
        },
        "400": {
          "description": "BAD REQUEST- request body didn't match schema or category id didn't exist"
        },
        "409": {
          "description": "UNAUTHORIZED- user not logged in or not admin"
        }
      }
    }
