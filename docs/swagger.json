            "id": {
              "type": "number"
            },
            "name": {
              "type": "string"
            },
            "descr": {
              "type": "string"
            },
            "department": {
              "type": "string"
            },
            "price": {
              "type": "string"
            },
            "image_url": {
              "type": "string"
