{
  "compilerOptions": {
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./",                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "baseUrl": "./",                      
    "paths": {
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@schemas/*": ["schemas/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@docs/*": ["docs/*"],
    }                  
  },
  
  "exclude":[
    "./node_modules"
  ],
}